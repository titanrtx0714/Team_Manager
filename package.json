{
  "name": "gauzy",
  "version": "0.1.0",
  "description": "Gauzy",
  "license": "AGPL-3.0",
  "homepage": "https://gauzy.co",
  "scripts": {
    "ng": "ng",
    "start": "yarn start:gauzy",
    "start:gauzy": "ng serve gauzy",
    "start:api": "ng serve api",
    "bootstrap": "yarn lerna bootstrap",
    "prebuild": "rimraf dist coverage",
    "build": "ng build",
    "build:prod": "ng build gauzy -c=production",
    "bundle-report": "ng build -c=production --stats-json && webpack-bundle-analyzer dist/apps/gauzy/stats.json",
    "test": "ng test",
    "lint": "nx lint && ng lint",
    "e2e": "ng e2e",
    "affected:apps": "nx affected:apps",
    "affected:libs": "nx affected:libs",
    "affected:build": "nx affected:build",
    "affected:e2e": "nx affected:e2e",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "affected:dep-graph": "nx affected:dep-graph",
    "affected": "nx affected",
    "format": "nx format:write",
    "format:write": "nx format:write",
    "format:check": "nx format:check",
    "update": "ng update @nrwl/workspace",
    "update:check": "ng update",
    "workspace-schematic": "nx workspace-schematic",
    "dep-graph": "nx dep-graph",
    "help": "nx help",
    "doc:build": "compodoc -p tsconfig.json -d dist/docs",
    "doc:serve": "compodoc -s -d dist/docs",
    "doc:build-serve": "compodoc -p tsconfig.json -d docs -s"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {      
    }
  },
  "lint-staged": {    
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/github"
    ],
    "generateNotes": {
      "preset": "angular"
    },
    "npmPublish": false
  },
  "private": true,
  "author": {
    "name": "Ever Co. LTD",
    "email": "ever@ever.co",
    "url": "https://ever.co"
  },
  "workspaces": [
    "libs/*",
    "apps/*",
    "tools"
  ],
  "dependencies": {
    "@angular/animations": "^8.0.1",
    "@angular/cdk": "^8.0.1",
    "@angular/common": "^8.0.1",
    "@angular/compiler": "^8.0.1",
    "@angular/core": "^8.0.1",
    "@angular/forms": "^8.0.1",
    "@angular/platform-browser": "^8.0.1",
    "@angular/platform-browser-dynamic": "^8.0.1",
    "@angular/router": "^8.0.1",
    "@angular/service-worker": "^8.0.1",
    "@nestjs/common": "^6.3.1",
    "@nestjs/core": "^6.3.1",
    "@nestjs/platform-express": "^6.3.1",    
    "core-js": "^3.1.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.2",
    "tslib": "^1.10.0",
    "uuid": "^3.3.2",
    "zone.js": "^0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.800.3",
    "@angular-devkit/build-ng-packagr": "~0.800.3",
    "@angular/cli": "~8.0.3",
    "@angular/compiler-cli": "^8.0.1",
    "@angular/language-service": "^8.0.1",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@compodoc/compodoc": "^1.1.9",
    "@nestjs/schematics": "^6.3.0",
    "@nestjs/testing": "^6.3.1",
    "@nrwl/angular": "^8.1.0",
    "@nrwl/cypress": "^8.1.0",
    "@nrwl/jest": "^8.1.0",
    "@nrwl/nest": "^8.1.0",
    "@nrwl/node": "^8.1.0",
    "@nrwl/workspace": "^8.1.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.12",
    "@semantic-release/github": "^5.4.0",
    "@semantic-release/npm": "^5.1.9",
    "@types/jest": "^24.0.14",
    "@types/node": "^12.0.8",
    "codelyzer": "^5.1.0",
    "commitizen": "^3.1.1",
    "cypress": "^3.3.1",
    "cz-conventional-changelog": "^2.1.0",
    "dotenv": "^8.0.0",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "jest-preset-angular": "^7.1.1",
    "lerna": "^3.15.0",
    "lint-staged": "^8.2.1",
    "ng-packagr": "^5.3.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.16",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.2",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.17.0",
    "concurrently": "^4.1.0",
    "typescript": "~3.5.2",
    "webpack-bundle-analyzer": "^3.3.2"
  }
}
