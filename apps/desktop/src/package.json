{
	"name": "gauzy-desktop",
  "productName": "gauzy",
	"version": "0.1.0",
	"description": "Gauzy Desktop",
	"license": "AGPL-3.0",
	"homepage": "https://gauzy.co",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ever-co/gauzy.git"
	},
	"bugs": {
		"url": "https://github.com/ever-co/gauzy/issues"
	},
	"main": "index.js",
	"author": {
		"name": "Ever Co. LTD",
		"email": "ever@ever.co",
		"url": "https://ever.co"
	},
	"build": {
		"appId": "com.company.gauzydesktop",
		"productName": "Gauzy Desktop",
		"copyright": "Copyright Â© 2019-Present. Ever Co. LTD",
		"asar": true,
		"npmRebuild": true,
		"directories": {
			"buildResources": "icons",
			"output": "../desktop-packages"
		},
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
		"mac": {
			"category": "public.app-category.developer-tools",
			"icon": "icon.png",
			"target": [
				"pkg",
				"dmg"
			]
		},
		"win": {
      "publisherName": "Ever Co. LTD",
			"target": [
        { 
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
			],
			"icon": "icon.ico"
		},
		"linux": {
			"icon": "icon.png",
			"target": [
				"AppImage",
				"deb",
				"tar.gz"
			],
      "executableName": "gauzy",
      "artifactName": "gauzy-${version}.${ext}",
			"synopsis": "Desktop",
			"category": "Development"
		},
		"nsis": {
      "oneClick": false,
      "perMachine": true,
			"createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
			"installerIcon": "icon.ico",
			"artifactName": "Gauzy-${version}.${ext}",
			"deleteAppDataOnUninstall": true,
      "menuCategory": true
		},
		"files": [
			"./**/*",
			"./node_modules/**/*"
		]
	},
	"dependencies": {
		"sqlite3": "https://github.com/ever-co/node-sqlite3",
		"electron-store": "^5.2.0",
		"node-notifier": "^7.0.1",
		"moment": "^2.25.3",
		"knex": "^0.21.1",
		"sharp": "^0.25.2",
		"mac-screen-capture-permissions": "^1.1.0",
		"form-data": "^3.0.0",
		"node-fetch": "^2.6.0",
		"screenshot-desktop": "^1.12.2"
	}
}
