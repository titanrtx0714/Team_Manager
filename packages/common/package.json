{
	"name": "@gauzy/common",
	"version": "0.1.0",
	"description": "",
	"author": "",
	"license": "",
	"private": true,
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"directories": {
		"lib": "dist",
		"test": "__tests__"
	},
	"files": [
		"dist/**/*"
	],
	"publishConfig": {
		"access": "restricted"
	},
	"scripts": {
		"test": "jest",
		"test:e2e": "jest --config ./__test__/jest.config.json",
		"build": "rimraf dist && tsc",
		"tsc": "yarn build"
	},
	"devDependencies": {
		"@types/node": "^14.14.20",
		"rimraf": "^3.0.2",
		"typescript": "^4.1.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage/packages/common",
		"testEnvironment": "node"
	}
}
