{
	"name": "@gauzy/desktop-api",
	"version": "0.1.0",
	"description": "Ever Gauzy Platform desktop APIs",
	"author": {
		"name": "Ever Co. LTD",
		"email": "ever@ever.co",
		"url": "https://ever.co"
	},
	"license": "AGPL-3.0",
	"private": true,
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"directories": {
		"lib": "dist"
	},
	"publishConfig": {
		"access": "restricted"
	},
	"scripts": {
		"build": "rimraf dist && yarn run compile",
		"compile": "tsc -p tsconfig.app.json"
	},
	"keywords": [],
	"dependencies": {
		"@grpc/grpc-js": "^1.6.7",
		"@nestjs/common": "^10.3.0",
		"@nestjs/core": "^10.3.0",
		"@nestjs/typeorm": "^10.0.1"
	},
	"devDependencies": {
		"@gauzy/integration-wakatime": "^0.1.0",
		"@nestjs/testing": "^10.3.0",
		"@types/node": "^17.0.33"
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "@nrwl/node:webpack",
				"options": {
					"maxWorkers": 4,
					"memoryLimit": 4000,
					"webpackConfig": "tools/build/webpack.config.js",
					"outputPath": "dist/apps/desktop/desktop-api",
					"main": "packages/desktop-api/src/main.ts",
					"tsConfig": "packages/desktop-api/tsconfig.app.json",
					"assets": [
						"packages/desktop-api/src/assets"
					]
				},
				"configurations": {
					"production": {
						"optimization": true,
						"extractLicenses": false,
						"inspect": false,
						"fileReplacements": [
							{
								"replace": "packages/desktop-api/src/environments/environment.ts",
								"with": "packages/desktop-api/src/environments/environment.prod.ts"
							}
						]
					}
				}
			},
			"serve": {
				"executor": "@nrwl/node:node",
				"options": {
					"buildTarget": "api-desktop:build"
				}
			},
			"test": {
				"executor": "@nrwl/jest:jest",
				"options": {
					"jestConfig": "packages/desktop-api/jest.config.js",
					"tsConfig": "packages/desktop-api/tsconfig.spec.json",
					"passWithNoTests": true
				}
			}
		}
	}
}
